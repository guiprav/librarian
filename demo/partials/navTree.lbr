<div class="lbrNavTreeContainer uk-offcanvas">
    <div class="uk-offcanvas-bar">
        <ul class="lbrNavTree uk-nav uk-nav-offcanvas uk-nav-parent-icon" data-uk-nav>
            {{#recurse hash.navTree}}
                <li
                    class="
                        lbrNavTree_node
                        {{#unless href}}
                            uk-parent
                        {{/unless}}
                    "
                >
                    <a href="{{either href '#'}}">
                        {{@key}}
                    </a>

                    {{#if children}}
                        <ul
                            class="
                                {{#if (equals depth 0)}}
                                    uk-nav-sub
                                {{/if}}
                            "
                        >
                            {{recurse children}}
                        </ul>
                    {{/if}}
                </li>
            {{/recurse}}
        </ul>
    </div>
</div>

<button style="position:fixed;left:-9999px" class="uk-button" data-uk-offcanvas="{target:'.lbrNavTreeContainer'}"></button>
